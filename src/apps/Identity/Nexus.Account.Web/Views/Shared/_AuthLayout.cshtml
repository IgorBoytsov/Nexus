<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/shared/input-group.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/account/account-form.css" asp-append-version="true" />
</head>
<body class="bg-dark" style="background: hsl(50, 0%, 10%); margin: 0; min-height: 100vh; display: flex; justify-content: center; align-items: center;">
    <main role="main" style="width: 100%; display: flex; justify-content: center;">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>