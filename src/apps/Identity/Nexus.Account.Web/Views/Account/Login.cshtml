@{
	ViewData["Title"] = "Авторизация";
	Layout = "_AuthLayout";
}

<div class="form-container">
	<p class="title">Авторизация</p>
	<form class="form">
		<div class="input-group">
			<label for="login">Логин</label>
			<input type="text" name="login" id="login" placeholder="">
		</div>
		<div class="input-group">
			<label for="password">Пароль</label>
			<input type="password" name="password" id="password" placeholder="">
			<div class="forgot">
				<a rel="noopener noreferrer" href="/Account/ForgotPassword">Востановить пароль ?</a>
			</div>
		</div>
		<button>Войти</button>
	</form>
	<p class="signup">
		Еще нету аккаунта?
		<a rel="noopener noreferrer" href="/Account/Register" class="" style="margin-left: 5px;">Создать</a>
	</p>
@* 	<p class="signup">
		Не помните пароль?
		<a rel="noopener noreferrer" href="/Account/ForgotPassword" class="" style="margin-left: 5px;">Востановить доступ</a>
	</p> *@
</div>

@section Scripts{
	<script type="module" src="~/js/features/auth-by-login/ui/login.form.js"></script>
}
